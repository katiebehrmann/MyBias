<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context="com.example.katiebehrmann.mybias.Main2ActivityRace">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Reaction to this image!"
        android:textSize="28dp"
        android:textColor="#000"
        android:padding="8dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center" />

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/keenepumpkins" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:src="@drawable/flexedbicep"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:textColor="#ffff" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:src="@drawable/fedup"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:textColor="#ffff" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:padding="8dp"
            android:src="@drawable/sademoji"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:textColor="#ffff" />

    </LinearLayout>
</LinearLayout>
